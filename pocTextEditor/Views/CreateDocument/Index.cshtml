@model Document

<h2 class="text-center">
    Editor de Texto
</h2>
<div class="col-md-12">
    <form asp-action="Create" asp-controller="CreateDocument" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mb-3">
            <input asp-for="Title" class="form-control" value="Documento sem nome" />
        </div>
        <div class="form-group mb-3">
            <textarea id="=tiny" asp-for="Content" style="width:68vw; height: 60vh;"></textarea>
        </div>
        <input type="submit" class="btn btn-primary w-100" value="Criar" />
        <a asp-action="Index" asp-controller="Home" class="btn btn-info mt-3 w-100">Voltar</a>
    </form>
</div>